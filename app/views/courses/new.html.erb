<%= render "shared/main_header" %>

<div class="course-new">
  <div class='title'>
    <h1 class='title-text'>
      コース登録
    </h1>
  </div>

  <%= render "shared/score_detail" %>

  <%= form_with model: [@score, @course], id: "new_course", class: "new_course", local: true do |f| %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">特徴</label>
      </div>
      <div class="text-box">
        <%= f.text_area :feature, class:"input-course-feature", id:"feature", placeholder:"例) アップダウンの少ない平坦なコースです。", autofocus: true %>
      </div>
      <p class="course-warn">※特徴の入力は任意です。</p>
      <div class='transition-btn'>
        <div class="btn-content">
          <%= f.submit "登録する" ,class:"next-btn" %><br>
        </div>
        <div class="btn-content">
          <%= link_to 'もどる', root_path, class:"back-btn" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/main_footer" %>
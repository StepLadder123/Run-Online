<%= render "shared/main_header" %>

<div class='log-in-form'>
  <div class='title'>
    <h1 class='title-text'>
      ログイン
    </h1>
  </div>
  <div class="form-contents">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>
    
      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :email %><br />
        </div>
        <%= f.email_field :email, autofocus: true, placeholder:"例) example@run-online.com", autocomplete: "email", class: "max-width" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :password %><br />
        </div>
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "current-password", class: "max-width" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="form-check-box">
            <div class="form-text-wrap">
              <%= f.check_box :remember_me %>
            </div>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="transition-btn">
        <div class="btn-content">
          <%= f.submit "ログイン", class: "next-btn" %>
        </div>
        <div class="btn-content">
          <%= link_to 'もどる', root_path, class:"back-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/main_footer" %>
<%= render "shared/main_header" %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>
  
    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label :email %><br />
      </div>
      <%= f.email_field :email, autofocus: true, placeholder:"例) example@run-online.com", autocomplete: "email" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label :password %><br />
      </div>
      <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="form-check-box">
          <div class="form-text-wrap">
            <%= f.check_box :remember_me %>
          </div>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="transition-btn">
      <%= f.submit "ログイン", class: "next-btn" %>
    </div>
  <% end %>
</div>

<%= render "shared/main_footer" %>